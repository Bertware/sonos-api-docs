{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sonos.svrooij.io/schema/projects.json",
  "definitions": {
    "Project": {
      "default": {
        "name": "",
        "repository": "",
        "usesGenerator": false
      },
      "properties": {
        "author": {
          "$ref": "author.json"
        },
        "name": {
          "title": "Project name",
          "type": "string"
        },
        "description": {
          "title": "Project description",
          "type": "string"
        },
        "language": {
          "title": "Used language",
          "description": "The language where this project is written in, or can be used with",
          "type":"string"
        },
        "link": {
          "title": "Link to project page",
          "type": "string"
        },
        "repository": {
          "title": "Link to repository page",
          "type": "string"
        },
        "tags": {
          "title": "Tags associated with this project",
          "type":"array"
        },
        "usesGenerator": {
          "title": "Project generated with provided generator?",
          "type":"boolean"
        }
      },
      "type": "object",
      "required": [
        "name",
        "usesGenerator"
      ],
      "anyOf": [
        { "required": ["link"]},
        { "required": ["repository"]}
      ]
    }
  },
  "title": "List of known projects using the local sonos api",
  "properties": {
    "apps": {
      "items": {
        "$ref": "#/definitions/Project"
      },
      "type": "array",
      "minItems": 1
    },
    "libraries": {
      "items": {
        "$ref": "#/definitions/Project"
      },
      "type": "array",
      "minItems": 1
    }
  },
  "type": "object"
}
